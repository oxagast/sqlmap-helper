{
    "manifest_version": 2,
    "name": "SQLMap Helper",
    "description": "Adds a helper menu for SQLMap.",
    "version": "0.13",
    "homepage_url": "https://github.com/oxagast/sqlmap-helper",

    "background": {
        "scripts": [
            "background.js"
        ]
    },
    
    "options_ui": {
    "page": "options.html"
  },

    "permissions": [
        "activeTab",
        "contextMenus",
        "clipboardWrite",
        "cookies",
        "<all_urls>",
        "storage",
        "webRequest",
        "webRequestBlocking"
    ],
    "applications": {
        "gecko": {
            "id": "sqlmaphelper@maskster.site",
            "strict_min_version": "55.0"
        }
    }
}
